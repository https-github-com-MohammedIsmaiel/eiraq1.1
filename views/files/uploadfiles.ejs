<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Document</title>
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css"
    rel="stylesheet">
  <link
    href="https://maxcdn.bootstrapcdn.com/font-awesome/4.2.0/css/font-awesome.min.css"
    rel="stylesheet">

  <link rel="stylesheet" href="/css/uploadfiles.css">



</head>

<body>
  <div class="container">
    <div class="row justify-content-between it pb-5"
      style="border-bottom: 1px solid orange;">
      <div class="col-sm-12 col-md-9 col-lg-8">
        <div id="one">
          <form action="files/uploadFile" method="POST"
            enctype="multipart/form-data">
            <div id="uploader">
              <div class="row uploadDoc">
                <div class="col-sm-4">

                  <!--error-->
                  <div class="fileUpload btn btn-orange">
                    <img
                      src="https://image.flaticon.com/icons/svg/136/136549.svg"
                      class="icon">
                    <span class="upl" id="upload">Upload document</span>
                    <input type="file" class="upload up" type="file" name="file"
                      required id="up" onchange="readURL(this);" />
                  </div>

                  <input type="hidden" name="folderid" value="<%=folderid%>">
                  <input type="hidden" name="foldername"
                    value="<%=foldername%>">
                </div>
              </div>
              <div class="row">
                <div class="col-sm-4">
                  <input class="btn form-control"
                    style="background-color: orangered; color: white;"
                    type="submit"> </input>
                </div>
              </div>
            </div>
          </form>
        </div>
      </div>
      <div class="col-sm-12 col-md-3 col-lg-3 align-self-center">
        <a href="files/return">
        <button class="btn btn-outline-dark">Return</button>
        </a>
      </div>
    </div>
  </div>




  <!-- render files -->
  <div class="container">
    <div class="row mt-5">
      <% for(var i=0; i < files.length; i++) { %>
        <div class="col-sm-12 col-md-6 col-lg-4 col-xl-3">
          <% if( files[i].user_id==user_id){%>
            <div>
              <a
                href="files/delete/<%=files[i].id%>/<%=files[i].fileid%>/<%=folderid%>/<%=foldername%>">
                <div> <span class="deleteicon"><i
                      class="fa fa-trash"></i></span>
                </div>
              </a>
            </div>
            <% } %>
              <div>
                <a href="<%=files[i].webviewlink %>" target="_blank">
                  <div class="thumbnail">
                    <span class="folder">
                      <% if( files[i].filetype=='.jpg' ){%>
                        <img
                          src="https://image.flaticon.com/icons/svg/136/136524.svg"
                          class="fileicon">
                        <% } %>
                          <% if( files[i].filetype=='.rar' ){%>
                            <img
                              src="https://www.flaticon.com/svg/vstatic/svg/202/202311.svg?token=exp=1619877715~hmac=9e9d886d16826797afd9fc1f1dae455f"
                              class="fileicon">
                            <% } %>
                              <% if( files[i].filetype=='.pdf' ){%>
                                <img
                                  src="https://image.flaticon.com/icons/svg/179/179483.svg"
                                  class="fileicon">
                                <% } %>
                                  <% if( files[i].filetype=='.docx' ){%>
                                    <img
                                      src="https://image.flaticon.com/icons/svg/281/281760.svg"
                                      class="fileicon">
                                    <% } %>
                                      <% if( files[i].filetype=='.rtf' ){%>
                                        <img
                                          src="https://image.flaticon.com/icons/svg/136/136539.svg"
                                          class="fileicon">
                                        <% } %>
                                          <% if( files[i].filetype=='.png' ){%>
                                            <img
                                              src="https://image.flaticon.com/icons/svg/136/136523.svg"
                                              class="fileicon">
                                            <% } %>
                                              <% if( files[i].filetype=='.jpeg'
                                                ){%>
                                                <img
                                                  src="https://image.flaticon.com/icons/svg/136/136524.svg"
                                                  class="fileicon">
                                                <% } %>
                                                  <% if(
                                                    files[i].filetype=='.txt'
                                                    ){%>
                                                    <img
                                                      src="https://image.flaticon.com/icons/svg/136/136538.svg"
                                                      class="fileicon">
                                                    <% } %>
                                                      <% if(
                                                        files[i].filetype=='.zip'
                                                        ){%>
                                                        <img
                                                          src="https://www.flaticon.com/svg/vstatic/svg/2306/2306214.svg?token=exp=1619878277~hmac=878e351caa52333921da51737fd42c0a"
                                                          class="fileicon">
                                                        <% } %>
                    </span>
                    <div class="title">
                      <%= files[i].filename%>
                    </div>
                  </div>
                </a>
              </div>

        </div>
        <% } %>
    </div>
  </div>

</body>
<script
  src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script
  src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"
  integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN"
  crossorigin="anonymous"></script>
<script
  src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"
  integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV"
  crossorigin="anonymous"></script>
<script src="/js/uploadfiles.js"></script>

</html>